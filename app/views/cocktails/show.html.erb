<h2><%= @cocktail.name %></h2>

<% @cocktail.doses.each do |dose| %>
  <li><%= dose.description %> of <%= dose.ingredient.name %></li>
  <%= link_to "Delete", cocktail_dose_path(@cocktail, dose),
    method: :delete,
    data: { confirm: "Are you sure?" } %>
<% end %>

<button type="button" class="btn btn-link"><%= link_to 'Add dose', new_cocktail_dose_path(@cocktail) %></button>



<button type="button" class="btn btn-link"><%= link_to 'Go back to home page', cocktails_path %></button>
